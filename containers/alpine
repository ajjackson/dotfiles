FROM docker.io/library/alpine:3.21

RUN apk add --no-cache \
    bats-core \
    coreutils-env \
    emacs-nox \
    fish \
    git \
    ncurses \
    py3-pip \
    shellcheck \
    stow

RUN python -m pip install --break-system-packages toml-validator

RUN adduser -D tester

USER tester
RUN mkdir /home/tester/src
WORKDIR /home/tester/src
